---
export type Props = {
  href: string;
};
const { href } = Astro.props;

const removeAllSlash = (path: string) => {
  return path.replaceAll('/', '').toLowerCase();
};
const isCurrentPath =
  removeAllSlash(Astro.url.pathname) === removeAllSlash(`${href}`);

const toHeaderMenu = (href: string) => {
  const path = href.toLowerCase();
  if (path === '/' || path === '/home') {
    return 'Home';
  }
  return (
    href.replaceAll('/', '').charAt(0).toUpperCase() +
    href.replaceAll('/', '').slice(1)
  );
};
---

<a
  href={href.toLowerCase()}
  class:list={[
    isCurrentPath
      ? 'text-white dark:text-white font-semibold underline text-lg'
      : 'text-black dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-700 transition-colors font-semibold',
  ]}>{Astro.slots.has('default') ? <slot /> : toHeaderMenu(href)}</a
>
