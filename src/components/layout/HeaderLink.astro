---
export type Props = {
  href: string;
};
const { href } = Astro.props;

const removeAllSlash = (path: string) => {
  return path.replaceAll('/', '').toLowerCase();
};
const isCurrentPath =
  removeAllSlash(Astro.url.pathname) === removeAllSlash(`${href}`);
---

<a
  href={href.toLowerCase()}
  class:list={[
    isCurrentPath
      ? 'text-white dark:text-white font-semibold underline'
      : 'text-black dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-700 transition-colors font-semibold',
  ]}>{Astro.slots.has('default') ? <slot /> : href}</a
>
