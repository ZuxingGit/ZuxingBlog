---
import { SEO } from 'astro-seo';
import 'remixicon/fonts/remixicon.css';

import Footer from '../components/layout/Footer.astro';
import Header from '../components/layout/Header.astro';
import {
  DESCRIPTION,
  HEADER_IMAGE,
  SITE_NAME,
  TWITTER_ACCOUNT,
} from '../constants';

export type Props = {
  title?: string;
  description?: string;
  article?: { tags: string[]; date: string };
  language?: string;
};

const {
  title,
  description = DESCRIPTION,
  article,
  language = 'en',
} = Astro.props;
---

<!DOCTYPE html>
<html lang={language} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} - ${SITE_NAME}` : SITE_NAME}</title>
    <SEO
      description={description}
      openGraph={{
        basic: {
          title: title ?? SITE_NAME,
          type: 'website',
          image: HEADER_IMAGE,
        },
        image: { alt: 'Zuxing Blog Header Image' },
        optional: { description, siteName: SITE_NAME },
        article: {
          authors: article && ['Zuxing Wu'],
          publishedTime: article?.date,
          tags: article?.tags,
        },
      }}
      twitter={{
        title,
        description,
        card: 'summary_large_image',
        image: HEADER_IMAGE,
        site: TWITTER_ACCOUNT,
        creator: TWITTER_ACCOUNT,
      }}
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+SC:wght@400;500;600;700;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="flex flex-col min-h-[100dvh] dark:bg-black">
    <Header />
    <main class="grow max-w-5xl mx-auto w-full px-4">
      <slot />
    </main>
    <Footer class="w-full" />
  </body>
</html>
